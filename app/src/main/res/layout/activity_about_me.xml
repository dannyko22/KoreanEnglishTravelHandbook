<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about_me"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.koreanenglishtravelhandbook.about_me">

    <TextView
        android:text="Danny Ko"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView1"
        android:textStyle="normal|bold"
        android:textSize="36sp"
        android:textColor="@color/cardview_dark_background" />
    <TextView
        android:text="\nMaking life easier...\nE-mail: danny.ko@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="@color/colorPrimary" />
    <View
        android:id="@+id/bottomemptyview"
        android:clickable="true"
        android:layout_width="0px"
        android:layout_height="505px" />
    <TextView
        android:text="\nAcknowledgements..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textStyle="normal"
        android:textSize="20px" />
    <TextView
        android:text="Unigrid icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textStyle="normal"
        android:textSize="20px" />
    <TextView
        android:text="Icon made by Roundicons from www.flaticon.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textStyle="normal"
        android:textSize="20px"/>
    <TextView
        android:text="Icon made by Freepik from www.flaticon.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textStyle="normal"
        android:textSize="20px"/>
</LinearLayout>
